---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
			<script src="https://cdn.tailwindcss.com"></script>
			  <link rel="preconnect" href="https://fonts.googleapis.com">
		  	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
		  <style>
		    body {
		      font-family: 'Inter', sans-serif;
		    }
		  </style>
	</head>
	<body class="bg-gray-950 text-white">
		<Header />
		<main>
		  <section class="h-screen flex items-center justify-center text-center px-6 bg-gradient-to-b from-gray-900 to-gray-950">
		    <div>
		      <h1 class="text-4xl md:text-6xl font-bold text-cyan-400 drop-shadow">Welkom bij CobaltHosting</h1>
		      <p class="mt-4 text-lg text-gray-300">Krachtige en betaalbare hosting voor jouw projecten.</p>
		      <a href="#pricing" class="mt-6 inline-block bg-cyan-500 hover:bg-cyan-400 text-black px-6 py-3 rounded-full font-semibold transition">Bekijk Pakketten</a>
		    </div>
		  </section>
		
		  <!-- Main Content -->
		  <main class="px-6 py-16 space-y-32">
		    <section id="services" class="text-center">
		      <h2 class="text-3xl font-bold text-cyan-400 mb-4">Onze Diensten</h2>
		      <p class="text-gray-300 max-w-xl mx-auto">Wij bieden Webhosting, Minecraft-servers en meer.</p>
		    </section>
		
		    <section id="pricing" class="text-center">
		      <h2 class="text-3xl font-bold text-cyan-400 mb-4">Pakketprijzen</h2>
		      <p class="text-gray-300 max-w-xl mx-auto">Kies het pakket dat bij jouw project past. Flexibel en schaalbaar.</p>
		    </section>
		
		    <section id="contact" class="text-center">
		      <h2 class="text-3xl font-bold text-cyan-400 mb-4">Contacteer Ons</h2>
		      <p class="text-gray-300 max-w-xl mx-auto">Vragen? We helpen je graag verder via e-mail of Discord.</p>
		    </section>
		  </main>

		<Footer />
	</body>
</html>
